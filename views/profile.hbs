        
 
            <div class="mainprof" >
                <h3>&nbsp; MyProfile &nbsp;</h3>                
                <div class="content profile_content">
                    {{#if success}}
                        <div class="alert alert-success" role="alert">
                            Οι αλλαγές πραγματοποιήθηκαν με επιτυχία!
                        </div>
                    {{/if}}
                    <form method="POST">
                        <div class="form-group">
                            <label for="update_username">Όνομα</label>
                            <input type="text" class="form-control input-box" id="update_username" name="username" placeholder="Όνομα">
                            <div class="errors">
                                {{#if u_error_exist}}
                                    <div>{{username_error}}</div>
                                {{/if}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="update_email">Email</label>
                            <input type="email" class="form-control input-box" id="update_email" name="email" placeholder="email">
                            <div class="errors">
                                {{#if e_error_exist}}
                                    <div>{{email_error}}</div>
                                {{/if}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="old_password">Κωδικός</label>
                            <input type="password" class="form-control input-box" id="old_password" name="password" placeholder="Κωδικός">
                            <div class="errors">
                                {{#if p_error_exist}}
                                    <div>{{password_error}}</div>
                                {{/if}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="update_password">Νέος Κωδικός</label>
                            <input type="password" class="form-control input-box" id="update_password" name="new_password" placeholder="Νέος Κωδικός">
                        </div>
                        <div class="form-group">
                            <label for="confirm_update">Επαλήθεσυη νέου κωδικού</label>
                            <input type="password" class="form-control input-box" id="confirm_update" name="confirm" placeholder="Επαλήθευση κωδικού">
                        </div>
                        <div class="form-group">
                            <label for="update_city">Πόλη</label><br>
                            <select class="mdb-select md-form input-box" id="update_city" name="city">
                                <option value="ΠΟΛΗ" >Πόλη</option>
                                <option value="ΑΘΗΝΑ">Αθήνα</option>
                                <option value="ΘΕΣΣΑΛΟΝΙΚΗ">Θεσσαλονικη</option>
                                <option value="ΠΑΤΡΑ">Πάτρα</option>
                                <option value="ΕΠΙΔΑΥΡΟΣ">Επίδαυρος</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteUser">Διαγραφή Λογαριασμού</button>
                        <button type="submit" onclick="updateUser()" id="submitButton" class="btn btn-primary">Αποθήκευση Αλλαγών</button>
                    </form>

                </div>  
            </div>            

            <!-- Modal -->
            <div class="modal fade" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            Είστε σίγουροι ότι θέλετε να διαγράψετε τον λογαριασμό σας;<br>
                            Αυτή η ενέργεια δεν έχει επιστροφή!
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" onclick="window.location.href='/profile/delete';" class="btn btn-danger">ΔΙΑΓΡΑΦΗ</button>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- ΤΟΠΟΘΕΤΕΙ ΤΙς DEFAULT VALUE ΣΤΗΝ ΦΟΡΜΑ --}}
            <script>
                const username = document.getElementById("update_username").value = "{{prof_name}}";
                const email = document.getElementById("update_email").value = "{{prof_email}}";
                const city = "{{prof_city}}";
                if(city==="ΑΘΗΝΑ"){
                    document.getElementById("update_city").selectedIndex = "1";
                }
                else if(city==="ΘΕΣΣΑΛΟΝΙΚΗ"){
                    document.getElementById("update_city").selectedIndex = "2";
                }
                else if(city==="ΠΑΤΡΑ"){
                    document.getElementById("update_city").selectedIndex = "3";
                }
                else if(city==="ΕΠΙΔΑΥΡΟΣ"){
                    document.getElementById("update_city").selectedIndex = "4";
                }
                else{
                    document.getElementById("update_city").selectedIndex = "0";
                }
            </script>

